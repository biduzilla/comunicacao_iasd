<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ComunicacaoDemandas" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mikado_yellow</item>
        <item name="colorPrimaryVariant">@color/yale_blue</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/mikado_yellow</item>
        <item name="colorSecondaryVariant">@color/mikado_yellow</item>
        <item name="colorOnSecondary">@color/mikado_yellow</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Splash" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--        <item name="colorPrimaryVariant">@color/white</item>-->
        <item name="android:statusBarColor">@color/mikado_yellow</item>
    </style>

    <style name="AppFullScreenTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
</resources>